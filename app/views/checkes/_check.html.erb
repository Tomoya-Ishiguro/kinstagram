<% if user_signed_in? %>
    <% if current_user.already_checked?(recipe) %>
        <%= link_to recipe_checkes_path(recipe), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= recipe.checkes.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to recipe_checkes_path(recipe), method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: black;">
                <%= recipe.checkes.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= recipe.checkes.count %>
    </i>
<% end %>