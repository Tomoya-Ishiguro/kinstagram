<div class="container">
  <div class="row py-3">
    <div class="col-3 order-2" id="sticky-sidebar">
      <div class="sticky-top">
       <h3 class="profile-name"><%= @user.name %>さんのマイページ</h3>
          <%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
       <% if @user.id == current_user.id %>
       <%= link_to  edit_user_path(@user), class: 'btn btn-outline-info' do %>
       <i class="fas fa-glasses"></i>
       <span>会員情報編集</span>
       <i class="fas fa-glasses"></i>
       <% end %>
       <% end %>
     </div>
   </div>
   <div class="col" id="main">
    <h3><%= @user.name %>さんの過去の投稿です</h3>
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-3">
        <div class="card">
         <%= link_to post_path(post.id) do %>
         <%= attachment_image_tag  post, :image, class: 'card-img-top' %>
         <% end %>
            <%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
         <%= link_to post_path(post.id) do %>
         <i class="fas fa-utensils"></i>
         <%= post.food_name %>
         <% end %>
         <%= post.caption %>
         <p><i class="fas fa-user-edit"></i>ユーザー名
           <%= post.user.name %>
         </p>
         <%= link_to  post_path(post.id), class: 'btn btn-primary' do %>
         <i class="fas fa-glasses"></i>
         <span>もっとみる</span>
         <i class="fas fa-glasses"></i>
         <% end %>
       </div>
     </div>
     <% end %>
   </div>
 </div>
</div>