
<div class="mx-auto" style="width: 200px;">
	<h3>会員情報変更</h3>
			<div class="form-body">
				<%= form_for(@user) do |f| %>
				<div class="form-group has-icon">
					<div class="user-edit-image">
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile_image", fallback: "no_image.jpg", size:'200x200' %>
					</div>

					<div class="form-group has-icon">
						<label class="control-label sr-only" for="inputName">Name</label>
						<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"変更したい名前を入れてください"%>
					</div>

					<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
					<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
				</div>
				<% end %>
				<%= link_to  user_path(current_user.id), class: 'btn btn-primary' do %>
				<i class="fas fa-biking"></i>
				<span>プロフィールを更新する</span>
				<i class="fas fa-biking"></i>
				<% end %>
				<% if @user.errors.any? %>
				<div id="error_explanation">
					<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
			</div>