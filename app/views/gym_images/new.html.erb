

<%= form_for(@gym_image, url: gym_images_path) do |f| %>
<% if @gym_image.errors.any? %>
<div id="error_explanation">
  <h2><%= @gym_image.errors.count %>件のエラーが発生しました。</h2>
  <ul>
    <% @gym_image.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
  <div class="row py-3">
    <div class="col-3 order-2" id="sticky-sidebar">
      <div class="sticky-top">
        sこちらはサイドバーです
      </div>
    </div>
    <div class="col" id="main">
      <h3>おすすめジムを投稿する</h3>
      <label for="photo">ジムの写真があれば選んでください</label><br>
      <%= f.attachment_field :image %><br>
      <h4><label for="name">ジムの名称</label></h4>
      <%= f.text_field :gym_name, :size=>"60x100", placeholder:"この筋肉飯の名前は？" %>
      <div class="inputsize">
       <h4><label for="intro">所在地や特徴を教えてください</label></h4>
       <%= f.text_area :intro, :size=>"60x10" , placeholder:"内容をこちらに入力してください" %>
     </div>
     <button type="submit" class="btn btn-primary">このジムをシェアする</button>
   </form>
   <% end %>
 </div>
</div>
</div>
