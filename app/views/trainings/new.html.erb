

<%= form_for(@training, url: trainings_path) do |f| %>
<% if @training.errors.any? %>
<div id="error_explanation">
  <h2><%= @training.errors.count %>件のエラーが発生しました。</h2>
  <ul>
    <% @training.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>



<div class="container">
  <div class="row py-3">
    <div class="col-3 order-2" id="sticky-sidebar">
      <div class="sticky-top">
        sこちらはサイドバーです
      </div>
    </div>



    <div class="col" id="main">
      <h3>トレーニングの共有</h3>
      <label for="photo">参考になる画像があれば選択してください</label><br>
      <%= f.attachment_field :image %><br>
      <h4><label for="name">トレーニング種目</label></h4>
      <%= f.text_field :training_name, :size=>"60x100", placeholder:"鍛えられる部位は？" %>
      <div class="inputsize">
       <h4><label for="explain">説明</label></h4>
       <%= f.text_area :explain, :size=>"60x10" , placeholder:"コツやセット数があれば記入してください" %>
     </div>


    <button type="submit" class="btn btn-primary">このトレーニングをシェアする</button>
  </form>
  <% end %>
</div>
</div>
</div>
