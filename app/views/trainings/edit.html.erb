

<div class="container">
    <div class="row py-3">
        <div class="col-3 order-2" id="sticky-sidebar">
            <div class="sticky-top">
                ...
            </div>
        </div>

        <div class="col" id="main">
            <h3>投稿を編集できます</h3>
<%= form_for(@training, url: training_path(@training.id)) do |f| %>
<h4>画像</h4>
<%= f.attachment_field :image %>
<h4>タイトル</h4>
<%= f.text_field :training_name %>
<h4>本文</h4>
<%= f.text_area :explain, :size=>"60x10" %>
<%= f.submit '保存' %>
<% end %>
        </div>
    </div>
</div>