<p id="notice"><%= notice %></p>

<h1>お問い合わせ一覧</h1>

<table>
  <thead>
    <tr>
      <th>お名前|</th>
      <th>メールアドレス|</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.content %></td>
        <td><%= link_to '詳細', contact,class: 'btn btn-default' %></td>
        <td><%= link_to '編集', edit_contact_path(contact),class: 'btn btn-default' %></td>
        <td><%= link_to '削除', contact, method: :delete,class: 'btn btn-default', data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to  new_contact_path, class: 'btn btn-default' do%>
                <i class="fas fa-swimmer"></i>
                <span>新規お問い合わせ</span>
                <i class="fas fa-swimmer"></i>
                <% end %>
