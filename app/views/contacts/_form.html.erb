<!-- form_withを使用してみました -->
<%= form_with(model: contact, local: true) do |form| %>
<% if contact.errors.any? %>
<div id="error_explanation">
  <h3><%= contact.errors.count %>件のエラーが発生しました</h3>

  <ul>
    <% contact.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <h4><%= form.label :name %></h4>
  <%= form.text_field :name,:size=>"60x60",placeholder:"筋肉　太郎" %>
</div>

<div class="field">
  <h4><%= form.label :email %></h4>
  <%= form.text_field :email, :size=>"60x60",placeholder:"example@aaaa.com" %>
</div>

<div class="field">
  <h4><%= form.label :email %></h4>
  <%= form.text_field :email, :size=>"60x60",placeholder:"お手数ですがアドレスの確認のためもう一度入力してください" %>
</div>

<div class="field">
  <h4><%= form.label :content %></h4>
  <%= form.text_area :content, :size=>"60x10",placeholder:"アプリケーションの不具合、ご意見・ご要望、広告の掲載依頼などをご記入ください" %>
</div>

<button type="submit" class="btn btn-primary">お問い合わせを送信する</button>
<% end %>

