<% recipes.each do |recipe| %>
<div class="card mb-1">
	<div class="card-body">
		<p class= "card-text"><%= attachment_image_tag recipe, :image, class: "card-img-top" %></p>
		<p class="card-text"><%=recipe.title%></p>
		<p class= "card-text"><small><%= simple_format recipe.body%></small></p>
		<%= link_to user_path(recipe.user_id) do %>
		<%=attachment_image_tag recipe.user, :profile_image, fallback: "no_image.jpg",class:"profile-img-circle", size:"30x30" %>
		<%= recipe.user.name %>
		<% end %>
		<i class="far fa-edit">投稿日時</i>
		<%= recipe.created_at.strftime('%m月%d日%H:%M:%S')%>
	</div>
</div>
<% end %>


