
<h3>新規投稿</h3>
<% recipes.each do |recipe| %>
<%= link_to recipe_path(recipe)do %>
<%= attachment_image_tag recipe, :image, size:"190x190",class:"coffee_image_media" %>
<% end %>
<%= link_to user_path(recipe.user_id) do %>
<%=attachment_image_tag recipe.user, :profile_image, fallback: "no_image.jpg",class:"profile-img-circle", size:"30x30" %>
<%= recipe.user.name %>
<% end %>
<div id="index_check_<%= recipe.id %>">
	<!-- 上記の記述によって投稿それぞれに値を割り振っています -->
	<%= render 'checks/check', recipe: recipe %>
</div>
<% end %>