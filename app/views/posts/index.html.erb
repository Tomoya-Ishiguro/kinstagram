<h2>筋肉飯</h2>
<h3>みんなの食べている筋肉飯を見ることができます<i class="fas fa-running"></i></h3>

<div class="row">
  <% @posts.each do |post| %>
  <div class="col-md-3">
    <div class="card">
     <%= link_to post_path(post.id) do %>
     <%= attachment_image_tag post, :image, class: 'card-img-top' %>
     <% end %>
     <%= attachment_image_tag post.user, :profile_image, :fill, 300, 300, fallback: "no_image.jpg", size:'300x300' , class: "img-circle " %>
     <%= link_to post_path(post.id) do %>
     <i class="fas fa-utensils"></i>
     <%= post.food_name %>
     <% end %>
     <%= post.caption %>
     <p><i class="fas fa-user-edit"></i>ユーザー名
       <%= post.user.name %>
     </p>
     <%= link_to  post_path(post.id), class: 'btn btn-primary' do %>
     <i class="fas fa-glasses"></i>
     <span>もっとみる</span>
     <i class="fas fa-glasses"></i>
     <% end %>
   </div>
 </div>
 <% end %>
 <div class="mx-auto" style="width: 200px;">
  <%= paginate @posts %>
</div>
